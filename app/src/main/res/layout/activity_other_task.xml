<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.vladimirbabenko.android_base_homeworks.OtherTaskActivity"
    >

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:text="CheckBox"
        />

    <ProgressBar
        android:id="@+id/pbAnimatedRotate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateDrawable="@drawable/loader"
        />

    <ProgressBar
        android:id="@+id/pbLoaderAnimatedRotate"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:indeterminateDrawable="@drawable/custom_progress_battary"
        android:visibility="visible"
        />

    <ProgressBar
        android:id="@+id/pbCustomAnimatedRotate"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:indeterminateDrawable="@drawable/custom_animated_rotate"
        android:visibility="visible"
        />



</LinearLayout>
